<p>
  <strong>Name:</strong>
  <%= chore.name %>
</p>
<p>
  <strong>Description:</strong>
  <%= chore.description %>
</p>
<p><strong>User: </strong>
  <% if chore.user %>
    <%= chore.user.email  %>
  <% else %>
    No user assigned
  <% end %>
</p>
<p>
  <%= link_to 'Delete this chore', [chore.home, chore],
   method: :delete,
   data: { confirm: "Are you sure?" } %>
</p>
